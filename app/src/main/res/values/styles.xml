<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <!-- EditText and all other controls color -->
        <item name="colorControlNormal">#eeeeee</item>
        <item name="colorControlActivated">@color/accent_dark</item>
        <item name="colorControlHighlight">@color/accent_dark</item>

        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


</resources>
