<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/layoutContainer"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/list_item_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/wcIcon"
        android:layout_toRightOf="@+id/wcIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/up_wc_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:textColor="@color/list_item_text"
            android:textSize="@dimen/regular_text_size"/>

        <TextView
            android:id="@+id/up_wc_dates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/list_item_subtext"
            android:textSize="@dimen/wc_date_title_text"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bookmark_outline_grey600_24dp"/>
</RelativeLayout>
