<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="match_parent">
    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ripple:rv_color="@color/secondary_text_color"
        ripple:rv_rippleDuration="300"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:clickable="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/wp_icon"
                    android:id="@+id/up_image_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/up_wc_title"
                    android:layout_toRightOf="@+id/up_image_icon"
                    android:layout_width="match_parent"
                    android:text="WordCamp London"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/up_wc_dates"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/up_image_icon"
                    android:layout_below="@+id/up_wc_title"
                    android:text="Jan 5- Jan 9"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>
</LinearLayout>